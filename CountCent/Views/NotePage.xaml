<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountCent.Views.NotePage"
             Title="NotePage"
             
             xmlns:models="clr-namespace:CountCent.Models"
             x:DataType="models:Note">
    <VerticalStackLayout
        MaximumWidthRequest="1000"
        Margin="10">
        <Label 
            Text="Welcome to Note!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Editor
            x:Name="TextEditor"
            Placeholder="Enter your note"
            Text="{Binding Text}"
            HeightRequest="100" 
            />

        <Grid
            ColumnDefinitions="*, *"
            ColumnSpacing="4"
            Margin="0, 10"
              >
            <Button
                BackgroundColor="Green"
                Text="Save"
                Clicked="SaveButton_Clicked" />
            <Button
                BackgroundColor="Red"
                Grid.Column="1"
                Text="Delete"
                Clicked="DeleteButton_Clicked"
                />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
    